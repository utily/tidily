{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"outDir": "dist/mjs",
		"moduleResolution": "node10",
		"resolveJsonModule": true,
		"target": "ES2023",
		"lib": [
			"ES2023",
		],
		"module": "ESNext",
		"declaration": true,
		"skipLibCheck": true,
		/* other */
		// where types are omitted. point package.json `exports` (import and require) / `types` field to these
		"declarationDir": "./dist/types",
		"baseUrl": ".",
		// Should include at least "node" and "vitest/globals". 
		// If more types are added make sure to add them to `tsconfig.cjs.json` and `tsconfig.mjs.json` as well.
		"types": [
			"vitest/globals"
		],
	},
	"include": [
		"**/*.spec.ts",
	],
	"files": [
		"index.ts"
	],
	"typeAcquisition": {
		"enable": true
	}
}
